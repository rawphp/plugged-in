{
  "name": "plugged-in",
  "version": "0.4.0",
  "description": "A plugin system for node js.",
  "main": "build/index.js",
  "author": "Tom Kaczocha <tom.kaczocha@temando.com>",
  "license": "MIT",
  "repository": "https://github.com/rawphp/plugged-in",
  "bugs": "https://github.com/rawphp/plugged-in/issues",
  "engines": {
    "node": ">=5"
  },
  "plugged-in": {
    "context": "plugged-in"
  },
  "dependencies": {
    "ajv": "~4.9.0",
    "babel-polyfill": "^6.16.0",
    "bluebird": "^3.4.6",
    "chalk": "^1.1.3",
    "color-logger": "0.0.6",
    "minimist": "^1.2.0",
    "moment": "^2.16.0",
    "optionator": "^0.8.2",
    "plugged-in": "^0.3.0",
    "plugged-in-extras-plugin": "1.0.0",
    "read-pkg-up": "^2.0.0",
    "source-map-support": "^0.4.6",
    "fs-extra": "^1.0.0",
    "underscore": "^1.8.3",
    "webpack": "^1.13.3",
    "write-json-file": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-builtin-extend": "^1.1.0",
    "babel-plugin-transform-es2015-classes": "^6.18.0",
    "babel-preset-es2015-node4": "latest",
    "babel-preset-stage-3": "^6.17.0",
    "chai": "^3.5.0",
    "chai-match": "^1.1.1",
    "dirty-chai": "^1.2.2",
    "esdoc": "^0.4.8",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-react": "^5.0.1",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-require-jsdoc": "^1.0.4",
    "isparta": "^4.0.0",
    "istanbul": "^1.0.0-alpha",
    "json-loader": "^0.5.4",
    "mocha": "^3.1.2",
    "mocha-lcov-reporter": "^1.2.0",
    "npm-watch": "^0.1.6",
    "sinon": "^1.17.6"
  },
  "files": [
    "build/",
    "resources/",
    "README.md",
    "CHANGELONG.md"
  ],
  "watch": {
    "build": {
      "patterns": [
        "."
      ],
      "extensions": [
        "js",
        "json"
      ],
      "ignore": "build/"
    }
  },
  "scripts": {
    "lint": "npm run clean && eslint .",
    "test": "env TZ='UTC' NODE_ENV=test mocha tests --compilers js:babel-core/register --require babel-polyfill --recursive",
    "coverage": "istanbul cover --verbose --report text --report lcov _mocha -- --compilers js:babel-core/register --require babel-polyfill tests/**/*.test.js --recursive",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "codeclimate": "./node_modules/.bin/codeclimate-test-reporter < coverage/lcov.info",
    "watch": "npm-watch",
    "clean": "rm -rf build",
    "build": "npm run clean && $(npm bin)/babel ./src/ --ignore node_modules --out-dir build",
    "build-docs": "./node_modules/.bin/esdoc -c esdoc.json"
  }
}
